<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".haberler.fragment_haberler">


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/fragmentyemekhane_progress_avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="PacmanIndicator"
        android:layout_gravity="center"
        app:indicatorColor="@color/colorPrimary"/>

    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_haberler_waveswipe">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_haberler_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fragment_haberler_textview_no_internet_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/interneterroranimation"
        app:lottie_loop="true" />

</FrameLayout>