<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogbox_baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="BAŞLIK BURADA OLACAK" />

        <TextView
            android:id="@+id/dialogbox_tarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogbox_baslik"
            android:layout_marginEnd="12dp"
            android:gravity="end"
            android:textStyle="italic"
            tools:text="12.10.2007" />

        <TextView
            android:id="@+id/dialogbox_ilk_paragraf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogbox_tarih"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:textSize="18sp"
            tools:text="Süleyman baba ve müritleri okulu sarmaya başladı" />

        <TextView
            android:id="@+id/dialogbox_icerik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dialogbox_ilk_paragraf"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:textSize="16sp"
            tools:text="Dediğimiz gibi mürietler işte ne beklersiniz \n belalı tipler işte" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialogbox_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogbox_icerik"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>